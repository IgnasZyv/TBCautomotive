@rendermode InteractiveServer
@page "/"
@using CarHostingWeb.Services
@using CarHostingWeb.Models
@using CarHostingWeb.Components.Shared

@inject LocalizationService Localization
@inject CarService CarService

<PageTitle>Car hosting</PageTitle>

<section class="hero ">
    <div class="hero-container pt-5">
        <div class="hero-text d-flex flex-column justify-content-center align-content-center">
            <img src="assets/Logo/Logo.webp" 
                 alt="TBC Automotive Logo" 
                 class="hero-logo rounded-2 shadow-sm fade-in-left" />

            <h1 class="hero-title fade-in-up">
                Servicio Integral de <span class="highlight">Automoción</span>
            </h1>
            <p class="hero-subtitle fade-in-up">
               @Localization.GetString("CompanyTagLine")
            </p>
                
            <div class="d-flex flex-row justify-content-center align-content-center text-center cta-buttons fade-in-up">
                <a href="#listing-section" class="btn btn-primary m-2">
                    @Localization.GetString("HeroCTAStock")
                </a>
                <a href="#contact-section" class="btn btn-secondary m-2">
                    @Localization.GetString("HeroCTAContact")
                </a>
            </div>
        </div>

        <div class="hero-image fade-in-right">
            <img src="assets/HeroSection/HeroCarIllustration.svg" 
                 alt="Car illustration" />
        </div>
    </div>
</section>

<section class="mt-3 listing-section px-3 pb-3 pt-3 mx-sm-4 px-lg-4" id="listing-section">
    <SectionHeader LocalizationString="ListingHeader" IconClassString="bi bi-car-front-fill me-1 text-primary" IsTop="@false"/>
    
    <DisplayCars />
</section>

<section class="contact-section bg-white pb-4 pt-4" id="contact-section">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-4 mb-md-5">
            @* <div class="d-inline-flex align-items-center mb-3"> *@
            @*     <i class="bi bi-envelope-fill text-primary me-2 fs-3 fs-md-2"></i> *@
            @*     <h2 class="mb-0 fs-4 fs-md-2 fw-bold">@Localization.GetString("ContactUsHeader")</h2> *@
            @* </div> *@
            
            <SectionHeader LocalizationString="HeaderContactUs" IconClassString="bi bi-envelope me-1 text-primary" IsTop="@false"/>
        
        </div>
        
        <!-- Main Content -->
        <div class="row justify-content-center align-items-center g-4 g-md-5">
            <!-- Logo and Info Section -->
            <div class="col-12 col-lg-6">
                <div class="text-center text-lg-start">
                    <!-- Logo -->
                    <div class="mb-3 mb-md-4">
                        <img src="assets/Logo/Logo.webp" 
                             alt="TBC Automotive Logo"
                             class="img-fluid rounded-3 shadow-sm hero-logo"
                             style="max-width: 200px; width: 100%;">
                    </div>
                    
                    <!-- Company Name -->
                    <h3 class="fw-bold mb-3 fs-5 fs-md-3" style="color: #2c3e50;">
                        Servicio Integral de 
                        <span class="text-primary d-block d-md-inline">Automoción</span>
                    </h3>

                    <!-- Tagline -->
                    <p class="text-muted mb-4 fs-6 fs-md-5 lh-base">
                        @Localization.GetString("CompanyTagLine")
                    </p>
                </div>
            </div>

            <!-- Contact Cards Section -->
            <div class="col-12 col-lg-6">
                <div class="row g-3">
                    <!-- Phone Card -->
                    <div class="col-12">
                        <div class="contact-card p-3 p-md-4 bg-white rounded-4 shadow-sm border-start border-5 border-primary h-100">
                            <div class="d-flex align-items-center">
                                <div class="contact-icon-wrapper me-3 me-md-4">
                                    <i class="bi bi-telephone-fill text-primary fs-4 fs-md-3"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1 fs-6 fs-md-5">@Localization.GetString("ContactPhoneText")</h6>
                                    <div class="d-flex flex-column">
                                        <a href="tel:+34636466037" 
                                           class="text-decoration-none text-dark fs-6 fs-md-5 fw-medium">
                                            +34 636466037
                                        </a>
                                        <a href="tel:+34611598108" 
                                           class="text-decoration-none text-dark fs-6 fs-md-5 fw-medium">
                                            +34 611598108
                                        </a>
                                    </div>
                                        
                                </div>
                                <div class="d-none d-md-block">
                                    <i class="bi bi-arrow-right text-muted"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Email Card -->
                    <div class="col-12">
                        <div class="contact-card p-3 p-md-4 bg-white rounded-4 shadow-sm border-start border-5 border-success h-100">
                            <div class="d-flex align-items-center">
                                <div class="contact-icon-wrapper me-3 me-md-4">
                                    <i class="bi bi-envelope-fill text-success fs-4 fs-md-3"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1 fs-6 fs-md-5">@Localization.GetString("ContactEmailText")</h6>
                                    <a href="mailto:info@tbcautomotive.es" 
                                       class="text-decoration-none text-dark fs-6 fs-md-5 fw-medium text-break">
                                        info@tbcautomotive.es
                                    </a>
                                </div>
                                <div class="d-none d-md-block">
                                    <i class="bi bi-arrow-right text-muted"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        @* <div class="text-center mt-4 mt-md-5"> *@
        @*     <div class="d-flex flex-column flex-md-row justify-content-center gap-3"> *@
        @*         <button class="btn btn-primary btn-lg px-4 py-3 rounded-4 shadow-sm fs-6 fs-md-5"> *@
        @*             <i class="bi bi-chat-dots-fill me-2"></i>Start Chat *@
        @*         </button> *@
        @*         <button class="btn btn-outline-dark btn-lg px-4 py-3 rounded-4 fs-6 fs-md-5"> *@
        @*             <i class="bi bi-calendar3 me-2"></i>Schedule Visit *@
        @*         </button> *@
        @*     </div> *@
        @* </div> *@
    </div>
</section>
